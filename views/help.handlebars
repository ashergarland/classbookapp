  <div class="container">
   
    <nav id="navbar-example2" class="navbar navbar-default navbar-static" role="navigation">
      <div class="container-fluid">
    
        <p class="navbar-text">Help</p>
    
      </div>
    </nav>

    {{#if sent}}
        <div class="alert .alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <strong>Thank you!</strong> Your message will be responded to asap.
        </div>
    {{/if}}
    
    <form role="form" action="./help" method="post">
      <div class="form-group">
        <label for="inputEmail3">Full Name</label>
        <input type="text" class="form-control" id="inputEmail3" placeholder="Full name" name="name" required>
      </div>
      <div class="form-group">
        <label for="inputEmail3">E-mail</label>
        <input type="email" class="form-control" id="inputEmail3" placeholder="E-mail" name="email" required>
      </div>
      <div class="form-group">
        <label for="inputEmail3">Subject</label>
        <select type="subject" class="form-control" id="subject" placeholder="Subject" name="subject" required>
          <option>General trouble with my account</option>
          <option>Can't change my password</option>
          <option>Can't change my profile image</option>
          <option>I have a suggestion</option>
          <option>Other</option>
        </select>

        <input type="subject" class="form-control" id="subject" placeholder="Other Subject" name="subject">

      </div>
      <div class="form-group">
        <label for="inputEmail3">Issue Details</label>
        <textarea type="email" class="form-control" id="inputEmail3" placeholder="Details" name="details" required></textarea>
      </div>
      <button type="submit" class="btn btn-default">Send for help!</button>
    </form>
    

  </div>

