<!DOCTYPE HTML><html><body>


</body></html>


    <div id="profile-image">
      <img src={{info.imageURL}} class="profile-pic" class="img-rounded">
      <button type="button" class="btn change"><span class="glyphicon glyphicon-pencil"></span></button>
          <div class="editPhoto"> 
            <br>
    <form method='post' action='/upload' enctype='multipart/form-data'>
        <input type='file' name='image'/ class="toggle-picture"> <input type='submit' class='btn btn-primary toggle-picture' />
    </form>
  </div>
    </div>

    
    <div id="profile-information">
      <h4><span class="glyphicon glyphicon-user"></span> Contact</h4>

      <table class="table">
        <tbody>
          <tr>
            <td>Name</td>
            <td id="profile-name"> {{info.firstName}} {{info.lastName}}</td>
            <td><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></button> </td>
          </tr>
          <tr>
            <td>Email</td>
            <td id="profile-email">{{info.email}}</td>
            <td> <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></button></td>
          </tr>
          <tr>
            <td>Change Password</td>
            <td >
             <div class="form-group">
              <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
              <br>
              <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Re-enter Password">
              <td> <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-pencil"></span></button></td>
            </div>
          </td>
           
          </tr>

        </tbody>
      </table>
    </div>

    <div id="profile-class-current">
      <h4><span class="glyphicon glyphicon-tasks"></span> Enrolled Classes</h4>

      <table class="table table-hover classes">
        <thead>
          <th> 
             ID
          </th>
          <th> 
             Name
          </th>
          <th> 
             Section
          </th>
        </thead>
        <tbody>
        {{#each current_classes}}
        <tbody>
          <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{section}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>

    <div id="profile-class-history">
      <h4><span class="glyphicon glyphicon-time"></span> Class History</h4>

      <table class="table table-hover classes">
        <thead>
          <th> 
             ID
          </th>
          <th> 
             Name
          </th>
          <th> 
             Section
          </th>
        </thead>
        {{#each previous_classes}}
        <tbody>
          <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{section}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>

