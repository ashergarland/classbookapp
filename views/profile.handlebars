  <div id="profile-container">

    <div id="profile-image">
      <img src={{info.imageURL}} class="profile-pic" class="img-rounded">
    </div>

    <div id="profile-information">
      <h4><span class="glyphicon glyphicon-user"></span> Contact</h4>

      <table class="table">
        <tbody>
          <tr>
            <td>Name</td>
            <td id="profile-name">{{info.firstName}} {{info.lastName}}</td>
          </tr>
          <tr>
            <td>Email</td>
            <td id="profile-email">{{info.email}}</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div id="profile-class-current">
      <h4><span class="glyphicon glyphicon-tasks"></span> Enrolled Classes</h4>

  <div class="bs-example bs-example-tabs">
    <ul id="myTab" class="nav nav-tabs">
      <li class="active"><a href="#allclasses" data-toggle="tab">All Classes</a></li>
      <li><a href="#mutualclasses" data-toggle="tab">Mutual Classes</a></li>

    </ul>
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade in active" id="allclasses">
             <table class="table table-hover classes">
        <thead>
          <th> 
             ID
          </th>
          <th> 
             Name
          </th>
          <th> 
             Section
          </th>
        </thead>
        <tbody>
          {{#each current_classes}}
          <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{section}} </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      </div>
      <div class="tab-pane fade" id="mutualclasses">
              <table class="table table-hover classes">
        <thead>
          <th> 
             ID
          </th>
          <th> 
             Name
          </th>
          <th> 
             Section
          </th>
        </thead>
        <tbody>
          {{#each current_classes_mutual}}
          <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{section}} </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  </div>
    </div>

    <div id="profile-class-history">
      <h4><span class="glyphicon glyphicon-time"></span> Class History</h4>

  <div class="bs-example bs-example-tabs">
    <ul id="myTab" class="nav nav-tabs">
      <li class="active"><a href="#allclassesHistory" data-toggle="tab">All Classes</a></li>
      <li><a href="#mutualclassesHistory" data-toggle="tab">Mutual Classes</a></li>

    </ul>
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade in active" id="allclassesHistory">
      <table class="table table-hover classes">
        <thead>
          <th> 
             ID
          </th>
          <th> 
             Name
          </th>
          <th> 
             Section
          </th>
        </thead>
        <tbody>
          {{#each previous_classes}}
          <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{section}} </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      </div>
      <div class="tab-pane fade" id="mutualclassesHistory">
      <table class="table table-hover classes">
        <thead>
          <th> 
             ID
          </th>
          <th> 
             Name
          </th>
          <th> 
             Section
          </th>
        </thead>
        <tbody>
          {{#each previous_classes_mutual}}
          <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{section}} </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  </div>
    </div>

  </div>

